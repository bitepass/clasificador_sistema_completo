# Variables de entorno para el sistema de clasificación

# Configuración de API Keys para DDIC-SM Clasificador de Delitos
# Para obtener gratis Gemini API Key: https://makersuite.google.com/app/apikey
# Para OpenAI: https://platform.openai.com/api-keys

# API Keys (configurar si están disponibles)
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Configuración de Flask
SECRET_KEY=ddic_sm_clasificador_delitos_secure_key_2024
FLASK_ENV=development
FLASK_DEBUG=true

# Configuración de base de datos
DATABASE_URL=sqlite:///database/app.db

# Configuración de archivos
UPLOAD_FOLDER=/tmp
MAX_CONTENT_LENGTH=16777216  # 16MB

# Configuración de procesamiento
MAX_WORKERS=4
TIMEOUT_SECONDS=30

# Configuración de seguridad
SECURITY_ENABLED=true
LOG_LEVEL=INFO

