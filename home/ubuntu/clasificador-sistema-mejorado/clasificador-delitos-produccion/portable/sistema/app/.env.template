# API Keys - Configurar con tus propias claves
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Flask Configuration
SECRET_KEY=your_secret_key_here
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///database/app.db

# Server Configuration
HOST=0.0.0.0
PORT=5000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:5000

# File Upload Configuration
MAX_CONTENT_LENGTH=52428800  # 50MB in bytes
UPLOAD_FOLDER=/tmp

# Processing Configuration
DEFAULT_PROCESSING_TIMEOUT=3600  # 1 hour in seconds
MAX_CONCURRENT_PROCESSES=3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Report Configuration
REPORTS_OUTPUT_FOLDER=reports
REPORTS_TEMPLATE_FOLDER=templates